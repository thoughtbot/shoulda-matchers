            %pre
              %code.language-ruby
                :preserve
                  require 'forwardable'

                  class Courier
                    extend Forwardable

                    attr_reader :post_office

                    def_delegators :post_office, :deliver

                    def initialize
                      @post_office = PostOffice.new
                    end
                  end
          .code-sample
